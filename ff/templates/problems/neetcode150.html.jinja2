{% extends 'base.html.jinja2' %}

{% block content %}
<h1>Neetcode 150 Problems</h1>
<details>
    <summary>Pattern Groups</summary>
    <table>
        <thead>
        <tr>
            <th>Pattern</th>
            <th>Problems</th>
        </tr>
        </thead>
        <tbody>
        {% for pattern, count in all_patterns.items() %}
        <tr>
            <td><a href="{{ url_for('problems.show', page='neetcode150', pattern=pattern.strip()) }}">{{ pattern }}</a></td>
            <td>{{ count }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</details>

<br>

<table>
    <thead>
    <tr>
        <th>#</th>
        <th>LC #</th>
        <th>Title</th>
        <th>Difficulty</th>
        <th>Type</th>
        <th>Link</th>
        <th>Patterns</th>
    </tr>
    </thead>
    <tbody>
    {% for problem in problems %}
    <tr>
        <td>{{ loop.index }}</td>
        <td>{{ problem['leetcode_number'] }}</td>
        <td>{{ problem['title'] }} <span><a href="{{ problem['link'] }}" target="_blank">link</a></span></td>
        <td>
            {% if problem['difficulty'] == 1 %}
            Easy
            {% elif problem['difficulty'] == 2 %}
            Medium
            {% else %}
            Hard
            {% endif %}
        </td>
        <td>
            {% if problem['is_premium'] %}
            Premium
            {% else %}
            Free
            {% endif %}
        </td>
        <td style="text-align: center; width: 5rem;">
            <!--- TODO -->
            <a href="">Log</a>
        </td>
        <td style="text-align: center; width: 30rem; word-wrap: break-word">{{ problem['patterns'] }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}